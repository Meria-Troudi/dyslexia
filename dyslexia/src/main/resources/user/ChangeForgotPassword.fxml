<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="520.0" prefWidth="727.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="controllers.ChangeForgotPasswordController">
   <children>
      <ListView layoutX="104.0" layoutY="146.0" prefHeight="301.0" prefWidth="551.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-style: none; -fx-padding: 10px; -fx-effect: dropshadow(three-pass-box, rgba(1, 41, 112, 0.1), 30, 0, 0, 0);;" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="4.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image>
      </ImageView>
      <Text fill="#012970" layoutX="241.0" layoutY="139.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your new password">
         <font>
            <Font size="25.0" />
         </font>
      </Text>
      <Text layoutX="218.0" layoutY="193.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your new password must be different to previous passwords." />
      <Button layoutX="271.0" layoutY="336.0" mnemonicParsing="false" onAction="#submitNewPassword" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: #DE2F01;" text="ResetPassword" textFill="WHITE" />
      <Hyperlink layoutX="325.0" layoutY="386.0" onAction="#goToLogin" text="Return to login!" />
      <Text fx:id="newError" fill="#dc3545" layoutX="257.0" layoutY="253.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="228.0" />
      <PasswordField fx:id="fpNew" layoutX="257.0" layoutY="215.0" prefHeight="26.0" prefWidth="228.0" promptText="Enter new password" />
      <PasswordField fx:id="fpConfirm" layoutX="257.0" layoutY="269.0" prefHeight="26.0" prefWidth="228.0" promptText="Confirm new password" />
      <Text fx:id="confirmError" fill="#dc3545" layoutX="262.0" layoutY="311.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="228.0" />
   </children>
</AnchorPane>
