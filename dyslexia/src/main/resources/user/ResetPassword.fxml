<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="495.0" prefWidth="822.0" style="-fx-background-color: #f6f9ff;"
            xmlns="http://javafx.com/javafx/17.0.15"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResetPasswordController">
    <children>

        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="161.0" layoutY="61.0" pickOnBounds="true" preserveRatio="true" />

        <Text fill="#012970" layoutX="169.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password Reset">
            <font>
                <Font size="25.0" />
            </font>
        </Text>

        <Text layoutX="169.0" layoutY="220.0" strokeType="OUTSIDE" strokeWidth="0.0" text="We sent an 8-character code to your email" />

        <!-- Email field -->
        <TextField fx:id="ftEmail" layoutX="169.0" layoutY="240.0" prefHeight="30.0" prefWidth="300.0" promptText="Email" />

        <!-- Code field -->
        <TextField fx:id="ftCode" layoutX="169.0" layoutY="290.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter Code" />

        <!-- Confirm button -->
        <Button layoutX="169.0" layoutY="340.0" mnemonicParsing="false" onAction="#confirmeOTP" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: #c8ad7f;" text="Confirm the code" textFill="WHITE" />

        <!-- Error message -->
        <Text fx:id="emailError" fill="#dc3545" layoutX="169.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" />

        <!-- Go to login -->
        <Text layoutX="169.0" layoutY="410.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account?" />
        <Hyperlink layoutX="340.0" layoutY="394.0" onAction="#goToLogin" text="Log in" />

    </children>
</AnchorPane>
