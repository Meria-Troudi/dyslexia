<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800" style="-fx-background-color: #f6f8fc;">
    
    <!-- Sidebar -->
    <VBox spacing="20" layoutX="0" layoutY="0" prefWidth="250" style="-fx-background-color: #ffffff;">
        <Label text="Eva Eng" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 0 20;" />
        
        <VBox spacing="10" layoutX="20" layoutY="80">
            <Button text="Dashboard" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 16px;" />
            <Button text="Classes" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 16px;" />
            <Button text="Useful Materials" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 16px;" />
            <Button text="Reminders" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 16px;" />
            <Button text="Settings" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 16px;" />
        </VBox>
    </VBox>

    <!-- Main Content -->
    <VBox layoutX="270" layoutY="30" spacing="30">

        <!-- Top Bar -->
        <HBox spacing="600" alignment="CENTER_LEFT">
            <Label text="Master Group" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <HBox spacing="10" alignment="CENTER">
                <Label text="Max Smirnov" />
                <ImageView fitWidth="40" fitHeight="40" style="-fx-background-radius: 20px;" />
            </HBox>
        </HBox>

        <HBox spacing="30">

            <!-- Left Content -->
            <VBox spacing="20">

                <!-- Your Progress -->
                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Your Progress" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <HBox spacing="20">
                        <VBox alignment="CENTER">
                            <ProgressIndicator progress="0.65" />
                            <Label text="Vocabulary" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <ProgressIndicator progress="0.5" />
                            <Label text="Grammar" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <ProgressIndicator progress="0.8" />
                            <Label text="Listening" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <ProgressIndicator progress="0.3" />
                            <Label text="Writing" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Dictionary -->
                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Dictionary" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        <Button text="Add new word" />
                    </HBox>
                    <TableView prefHeight="200">
                        <columns>
                            <TableColumn text="Word" />
                            <TableColumn text="Pronunciation" />
                            <TableColumn text="Translation" />
                        </columns>
                    </TableView>
                </VBox>

            </VBox>

            <!-- Right Content -->
            <VBox spacing="20">

                <!-- Exercises Section -->
                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Exercises" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <ProgressBar progress="0.3" prefWidth="200" />
                    <Label text="Testing" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <ProgressBar progress="0.5" prefWidth="200" />
                    <Label text="New words" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <ProgressBar progress="0.3" prefWidth="200" />
                </VBox>

                <!-- Calendar Section -->
                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Schedule" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <DatePicker />
                    <VBox spacing="5">
                        <Label text="• English Classes 7:30 pm - 9:15 pm" />
                        <Label text="• Speaking Courses 10:30 am - 11:30 am" />
                    </VBox>
                </VBox>

            </VBox>

        </HBox>

    </VBox>

</AnchorPane>
